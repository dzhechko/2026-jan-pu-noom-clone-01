{
  "name": "vesna",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/api",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@vesna/api",
    "build": "npm run build --workspace=@vesna/api",
    "lint": "npm run lint --workspace=@vesna/api",
    "type-check": "npm run type-check --workspace=@vesna/api && npm run type-check --workspace=@vesna/shared",
    "test": "npm run test --workspace=@vesna/api",
    "db:generate": "npm run db:generate --workspace=@vesna/api",
    "db:migrate:dev": "npm run db:migrate:dev --workspace=@vesna/api",
    "db:migrate:deploy": "npm run db:migrate:deploy --workspace=@vesna/api",
    "db:push": "npm run db:push --workspace=@vesna/api",
    "db:seed": "npm run db:seed --workspace=@vesna/api",
    "db:studio": "npm run db:studio --workspace=@vesna/api",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  }
}
